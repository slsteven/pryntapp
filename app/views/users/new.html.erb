<!-- flash message  -->
<% if flash.any? %>
  <%= flash[:errors] %>
  <%= flash[:notice] %>
<% end %>

<div class="row">
  <div class="title">
    <h1>Welcome to Task</h1>
  </div>
</div>

<div class="row">
  <div class="form_container">
    <div class="panel panel-primary">
      <div class="panel-body">
        <form method="POST" action="/users" role="form">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <div class="form-group">
            <h2>Create account</h2>
          </div>
          <div class="form-group">
            <label class="control-label" for="signupName">First name</label>
            <input id="signupName" type="text" name="user[first_name]" maxlength="50" class="form-control">
          </div>
           <div class="form-group">
            <label class="control-label" for="signupName">Last name</label>
            <input id="signupName" type="text" name="user[last_name]" maxlength="50" class="form-control">
          </div>
          <div class="form-group">
            <label class="control-label" for="signupEmail">Email</label>
            <input id="signupEmail" type="email" name="user[email]" maxlength="50" class="form-control">
          </div>
          <div class="form-group">
            <label class="control-label" for="signupPassword">Password</label>
            <input id="signupPassword" type="password" name="user[password]" maxlength="25" class="form-control">
          </div>
          <div class="form-group">
            <label class="control-label" for="signupPasswordagain">Password again</label>
            <input id="signupPasswordagain" type="password" name="user[password_confirmation]" maxlength="25" class="form-control">
          </div>
          <div class="form-group">
            <button id="signupSubmit" type="submit" class="btn btn-info btn-block">Create your account</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="form_container">
    <div class="panel panel-primary">
      <div class="panel-body">
        <form method="POST" action="/sessions" role="form">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <div class="form-group">
            <h2>Log In</h2>
          </div>
          <div class="form-group">
            <label class="control-label" for="signupEmail">Email</label>
            <input id="signupEmail" type="email" name="email" maxlength="50" class="form-control">
          </div>
          <div class="form-group">
            <label class="control-label" for="signupPassword">Password</label>
            <input id="signupPassword" type="password" name="password" maxlength="25" class="form-control">
          </div>
          <div class="form-group">
            <button id="signupSubmit" type="submit" class="btn btn-info btn-block">Create your account</button>
          </div>
        </form>
      </div>
    </div>
    <%= image_tag "fb_login.png" %>
    <%= link_to 'Login with Facebook', @auth_url, :class=>"button" %>
  </div>
</div>

